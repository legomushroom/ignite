
body, html
  height 100%

body
  margin 0
  overflow hidden
  text-align center

.scene
  position relative
  display inline-block
  margin-left -200px
  // border 1px solid green
.canvas
  width 600px
  height 450px
  margin 0 auto
  display block
  // position absolute
  position relative
  z-index 2
  // border 1px solid hotpink
  backface-visibility hidden
  margin 0 auto
  // &--2
  //   z-index 1
    
shadowSize = 700px
.shadow
  width  shadowSize
  height shadowSize
  background transparent url('../i/shadow.svg') no-repeat center center
  position absolute
  z-index 1
  left 50%
  top 50%
  margin-left -(shadowSize/2)
  margin-top  -(shadowSize/2.25)
  transform  scale(0) translateY(300px)
  
torchHeight = 144px
.torch
  position absolute
  z-index 2
  left 50%
  bottom - torchHeight + 14px
  margin-left - 11px
  width  73px
  height torchHeight
  // background transparent url('../i/torch@2x.png') no-repeat center center
  // background-size 100% auto
  background transparent url('../i/torch.svg') no-repeat center center
  opacity 0

.jelly-torch
  position absolute
  left 50%
  top 50%
  margin-top -80px
  margin-left 140px
  z-index 3

.by
  position absolute
  right -84px
  bottom 40px
  display block
  width 35px
  height 32px
  background transparent url('../i/by.svg') no-repeat center center
  z-index 3

